<%= bootstrap_form_for(@order, layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-10") do |f| %>
  <% if @order.errors.any? %>
    <div class="alert alert-danger">
      <h3><%= raw t('errors.template.header', count: @order.errors.count, 
                  model: t('activerecord.models.order'))%>:</h3>

      <ul>
      <% @order.errors.full_messages.each do |msg| %>
        <li><%= raw msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, label: t('.name') %>
  </div>
  <div class="field">
    <%= f.text_area :address, rows: 3, label: t('.address') %>
  </div>
  <div class="field">
    <%= f.text_field :email, label: t('.email') %>
  </div>
  <div class="field">
    <%= f.select :pay_type, Order::PAYMENT_TYPES, prompt: t('.select_pay_type'), label: t('.pay_type') %>
  </div>
  <div class="actions">
    <%= f.submit t('.place_order'), :class => 'btn btn-success' %>
  </div>
<% end %>
