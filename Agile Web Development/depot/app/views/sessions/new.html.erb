<% if notice %>
	<div id ="notice">
		<%= notice_color(notice)%>
	</div>
<% end %>





<%= bootstrap_form_tag layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-4" do |f| %>
	<h1>Login</h1>
	
	<div class="field">
		<%= f.text_field :name %>
	</div>

	<div class="field">
		<%= f.password_field :password %>
	</div>

	<div class="form-group">
    	<div class="col-sm-offset-2 col-sm-10">
			<%= f.submit 'Login' %>
		</div>
	</div>
<% end %>

